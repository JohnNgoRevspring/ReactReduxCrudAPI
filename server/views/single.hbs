<div>
    <h2>View new note</h2>
    <div class="form-group">
        <label for="title">Title</label>
        {{title}} <span class="badge">{{priority}}</span>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        {{description}}
    </div>
    <div class="panel-footer"> {{date}}</div>

    <form action="/note/{{id}}?_method=DELETE" method="post">
        <a href="/note/{{id}}/edit" type="button" class="btn btn-default btn-warning">
        Edit
        </a> | 
        <button type="submit" class="btn btn-default btn-danger">
            Delete
        </button>
    </form>
</div>