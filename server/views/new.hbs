<form class="form" action="/note" method="post">
    <h2>Add new note</h2>
    <div class="form-group">
        <label for="title">Title</label>
        <input name="title" type="text" class="form-control" id="title" placeholder="Enter a note">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input name="description" type="text" class="form-control" id="description" placeholder="Enter a description">
    </div>
    <div class="form-group">
        <label for="priority">Priority</label>
        <select name="priority" class="form-control" id="priority">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
        </select>
    </div>
    <button type="submit" class="btn btn-default btn-success"> Create
    </button>
</form>