<form class="form" action="/note/{{id}}?_method=PUT" method="post">
    <h2>Edit new note</h2>
    <div class="form-group">
        <label for="title">Title</label>
        <input value="{{title}}" name="title" type="text" class="form-control" id="title" placeholder="Enter a note">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input  value="{{description}}" name="description" type="text" class="form-control" id="description" placeholder="Enter a description">
    </div>
    <div class="form-group">
        <label for="priority">Priority</label>
        <select name="priority" class="form-control" id="priority">
            {{#select priority}}
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            {{/select}}
        </select>
    </div>
    <button type="submit" class="btn btn-default btn-danger"> Save
    </button>
</form>